<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.board2.BoardMapper">
    <insert id="postInsReq">
        INSERT INTO board
        SET title= #{title}
            , contents= #{contents}
            , writer= #{writer}
    </insert>

    <select id="selGetRes">
        Select board_id AS boardId, title, writer, created_at AS createdAt
        FROM board
        ORDER BY board_id DESC
    </select>

    <select id="selGetOneRes">
        Select board_id AS boardId, title, writer, contents, created_at AS createdAt
        FROM board
        WHERE board_id = #{boardId}
    </select>

    <update id="putBoard">
        UPDATE board
        <set>
            <if test=" title != null and title != '' ">
                title= #{title}
            </if>
            <if test=" contents !=null and contents !='' ">
                ,contents= #{contents}
            </if>
            <if test=" writer != null and writer != '' ">
                ,writer= #{writer}
            </if>
        </set>
        WHERE board_id = #{boardId}
    </update>

    <delete id="">

    </delete>

</mapper>